@model ControleDePonto.Models.RegistroPonto
@{
    ViewData["Title"] = "Atualizar";
}

<h1>Atualizar</h1>

<hr />
<div class="row">
    <form asp-action="Atualizar" class="form-group col-lg-8" method="post">
        <input type="hidden" asp-for="CodRegistro" />

        <div class="form-row">
            <div class="form-group col-lg-3">
                <label asp-for="Date"></label>
                <input class="form-control" type="date" asp-for="Date" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-lg-6">
                <label asp-for="HoraEntrada" style="box-sizing:inherit;"></label>
                <input class="form-control" type="time" asp-for="HoraEntrada" />
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="HoraSaidaAlmoco"></label>
                <input class="form-control" type="time" asp-for="HoraSaidaAlmoco" />
            </div>
        </div>

        <div class="row">
            <div class="form-group col-lg-6">
                <label asp-for="HoraRetornoAlmoco" style="box-sizing:inherit;"></label>
                <input class="form-control" type="time" asp-for="HoraRetornoAlmoco" />
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="HoraSaida" style="box-sizing:inherit;"></label>
                <input class="form-control" type="time" asp-for="HoraSaida" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-lg-12">
                <label asp-for="DescricaoAtividades" style="box-sizing:inherit;"></label>
                <textarea rows="5" cols="160" class="form-control" asp-for="DescricaoAtividades"></textarea>
            </div>
        </div>

        <div class="form-row">
            <div class="col-sm-2">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
            <div class="col-sm-2">
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>

        </div>
    </form>
</div>